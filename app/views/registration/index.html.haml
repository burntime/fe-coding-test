%h1 Registration#index
%p Find me in app/views/registration/index.html.erb

= form_for :registrations, url: new_registration_path do |f|

  = f.label :name
  = f.text_field :name

  = f.label :lastname
  = f.text_field :lastname

  = f.label :email
  = f.text_field :email

  = f.label :password
  = f.password_field :password

  = f.label :age
  = f.select :age, [nil] + (18..100).map { |n| [n, n] }

  = f.label :gender do
    Gender
    = f.label :gender_m do
      = f.radio_button :gender, 'm'
      Male
    = f.label :gender_w do
      = f.radio_button :gender, 'w'
      Female
    = f.label :gender_other do
      = f.radio_button :gender, 'other'
      Other

  = submit_tag('Register', disabled: true)
